{
  "manifest_version": 3,
  "name": "GitHub PR File Hider Button",
  "version": "1.0",
  "homepage_url": "https://github.com/HoangYell/github-pr-file-hider-button",
  "description": "Adds a button to hide individual files in GitHub Pull Request reviews.",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "hoangyell.svg"
  },
  "author": {
    "name": "HoangYell",
    "url": "https://hoangyell.com/"
  }
}
